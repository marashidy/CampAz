<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Create a new Campground!</h1>
        <div style="width: 40%; margin: 20px auto;">
            <form action="/campgrounds" method="POST">
                
                <div class="form-group">
                    <input required class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input required class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input required class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                  <!--   <input required class="form-control" type="text" name="description" placeholder="description"> -->
                    <textarea required class="form-control" name="description" placeholder="description" cols="30" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <button class="form-control btn btn-primary" type="submit">Submit</button>
                </div>
        
            </form>
        <a href="/campgrounds">Go back</a>
        </div>
    </div>




